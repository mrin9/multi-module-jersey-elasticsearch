{
  "users_index":{
    "settings":{"number_of_shards":1},
    "mappings":{
      "users" :{
        "dynamic"   :"strict",        
        "properties":{
          "userId"   :{"type": "text" ,"analyzer": "keyword" },            
          "password" :{"type": "text" ,"analyzer": "keyword" },            
          "userName" :{"type": "text" ,"analyzer": "keyword" },            
          "email"    :{"type": "text" },            
          "role"     :{"type": "text" ,"analyzer": "keyword" },
          "isActive" :{"type": "boolean"},
          "address1" :{"type": "text" },
          "address2" :{"type": "text" },
          "postal"   :{"type": "text" },
          "city"     :{"type": "text" },
          "state"    :{"type": "text" },
          "country"  :{"type": "text" }
        }
      }
    }
  },

      
  "products_index":{
    "settings"  :{"number_of_shards":1},
    "mappings"  :{
      "products":{
        "dynamic"   :"strict",        
        "properties":{
          "productId"     : { "type": "text","analyzer": "keyword" },            
          "productName"   : { "type": "text","analyzer": "keyword"  },
          "productType"   : { "type": "text","analyzer": "keyword"  },
          "listPrice"     : { "type": "long" },            
          "unit"          : { "type": "text" },
          "quantityOnHand": { "type": "long" },
          "reorderLevel"  : { "type": "long" }
        }
      }
    }
  },
 
  "orders_index":{
    "settings":{"number_of_shards":1},
    "mappings":{
      "orders":{
        "dynamic"   : "strict",        
        "properties":{
          "orderId"    :{"type": "text" ,"analyzer": "keyword" },
          "userId"     :{"type": "text" ,"analyzer": "keyword" },
          "userName"   :{"type": "text" ,"analyzer": "keyword" },
          "userEmail"  :{"type": "text" },
          "orderStatus":{"type": "text" },
          "paymentType":{"type": "text" },
          "orderDate"  :{"type": "text" },
          "shippedDate":{"type": "text" },
          "address1"   :{"type": "text" },
          "address2"   :{"type": "text" },
          "postal"     :{"type": "text" },
          "city"       :{"type": "text" },
          "state"      :{"type": "text" },
          "country"    :{"type": "text" },
          "totalPrice" :{"type": "long" },
          "orderLines" :{    
            "type"       : "nested",  
            "properties" : {
                "productId"  : { "type": "text","analyzer": "keyword"    },            
                "productName": { "type": "text","analyzer": "keyword"    }, 
                "productType": { "type": "text","analyzer": "keyword"    },
                "quantity"   : { "type": "integer"},            
                "price"      : { "type": "long"   }            
            }
          }  
        }
      }
    }
  }

}